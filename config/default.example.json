{
	"debug": false,
	"logfile": "logs/debug.log",
	"ipfs_repo": "/opt/ipfs_repo",
	"ipns_cache": "cache/ipns",
	"pinset_filter": {
		"enable": true,
		"optional": true,
		"dataFolder": "cache/pinset",
		"overwrite": {
			"cid_blocklist": false,
			"origin_filter": true
		}
	},
	"origin_filter":{
		"enable": true,
		"policies": {
			"direct": [".*"],
			"same_origin": [".*"],
			"user_initiated_top_level": [".*"],
			"cross_site": [
				"^https?://.*%.localhost/?$",
				"^https?://localhost/?$"
			]
		}
	},
	"cid_blocklist": {
		"enable": true,
		"source": "both",
		"remoteFile": "https://badbits.dwebops.pub/badbits.deny",
		"localFile": "config/cid-blocklist.txt",
		"dataFolder": "cache/cid-blocklist"
	}
}
